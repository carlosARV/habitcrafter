<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Habit Crafter</title>
        <!-- BOOTSTRAP -->
        <link rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/minty/bootstrap.min.css">

        <!-- FONT AWESOME -->
        <script src="https://kit.fontawesome.com/2f03c4fa35.js"
            crossorigin="anonymous"></script>

        <!-- CUSTOM CSS -->
        <link rel="stylesheet" href="/css/main.css">

        <!-- Referencia a main.js -->
        
    </head>
    <body>
        {{>navigation}}

        <main class="container p-5">
            {{>messages}}
            {{>errors}}
            {{{body}}}
        </main>

        <!-- BOOTSTRAP 4.4 -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>

        <script
            src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>

        <!-- Datepicker -->
        <script
            src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/js/bootstrap-datepicker.min.js"></script>
        <script
            src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/locales/bootstrap-datepicker.es.min.js"></script>
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/css/bootstrap-datepicker.min.css"
            rel="stylesheet">

        <!-- Timepicker -->
        <script
            src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-timepicker/0.5.2/js/bootstrap-timepicker.min.js"></script>
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-timepicker/0.5.2/css/bootstrap-timepicker.min.css"
            rel="stylesheet">

        <!-- Script para inicializar el Datepicker -->
        <script>
            $(document).ready(function () {
                $('.datepicker').datepicker({
                    format: 'yyyy-mm-dd',
                    autoclose: true,
                    todayHighlight: true,
                    todayBtn: 'linked',
                    clearBtn: true,
                    language: 'en'
                });

                $('.clockpicker').timepicker({
                    autoclose: true,
                    showMeridian: false // Opciones adicionales seg√∫n tu preferencia
                });

                $('.icon-calendar').on('click', function() {
                    $(this).closest('.form-group').find('.datepicker').focus();
                });

                $('.icon-clock').on('click', function() {
                    $(this).closest('.form-group').find('.clockpicker').focus();
                });
            });
        </script>
    </body>
</html>